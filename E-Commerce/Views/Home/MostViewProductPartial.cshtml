
@model IEnumerable<E_Commerce.Models.Product>
@{
    ViewBag.Title = "MostViewProductPartial";
    Layout = null;
}


<h4>Most Viewed<small class="pull-right">Most Viewed</small></h4>
<div class="row-fluid">
    <div id="featured" class="carousel slide">
        <div class="carousel-inner">
            <div class="item active">


                <ul class="thumbnails">
                    @foreach (var item in Model.OrderByDescending(p=>p.productViewed).Take(4))
                    {
                        <li class="span3">
                            <div class="thumbnail">
                                <i class="tag">@item.productViewed</i>
                                <a href="/Home/ProductDetail/@item.product_id"><img src="@item.photo" alt="@item.productViewed" style="width:160px; height:160px;"></a>
                                <div class="caption">
                                    <h5>@item.productName</h5>
                                    <h5 style="color:burlywood; font-size:12px;">(@item.productViewed Viewed)</h5>
                                    <h4><a class="btn" href="/Home/ProductDetail/@item.product_id">VIEW</a> <span class="pull-right">$@item.price</span></h4>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
            </div>

        </div>

    </div>
</div>

