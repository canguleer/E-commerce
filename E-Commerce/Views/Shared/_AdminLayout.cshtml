<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin - Dashboard</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Content/PanelContent/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="~/Content/PanelContent/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <!-- Page level plugin CSS-->
    <link href="~/Content/PanelContent/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/PanelContent/css/sb-admin.css" rel="stylesheet">
</head>

<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="@Url.Action("Index","Admin")">Admin Panel</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search -->
   
        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">

            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-left:1320px; ">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                    <a class="dropdown-item" href="@Url.Action("Index","Home")" data-toggle="modal" data-target="#logoutModal">Çıkış</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Admin")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Home Page</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Categories")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Categories</span>
                </a>
            </li>
            <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Product Pages</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Products Screens:</h6>
                    <a class="dropdown-item" href="@Url.Action("Index","Products")">Products</a>
                    <a class="dropdown-item" href="@Url.Action("Index","Product_Detail")">Product Details</a>
                    <a class="dropdown-item" href="@Url.Action("Index","Product_Photo")">Product Photo</a>
                </div>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Brands")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Brands</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/Models/Index">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Model</span>
                </a>
            </li>
            <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Order Pages</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Order Screens:</h6>
                    <a class="dropdown-item" href="@Url.Action("Index","Orders")">Orders</a>
                    <a class="dropdown-item" href="@Url.Action("Index","Order_Status")">Order Status</a>

                </div>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Campaigns")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Campaigns</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Shippers")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Shippers</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Suppliers")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Suppliers</span>
                </a>
            </li>

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Bills")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Bills</span>
                </a>
            </li>
            <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>User Pages</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">User Screens:</h6>
                    <a class="dropdown-item" href="@Url.Action("Index","Users")">Users</a>
                    <a class="dropdown-item" href="@Url.Action("Index","Roles")">Roles</a>
                    <a class="dropdown-item" href="@Url.Action("Index","User_Roles")">User Roles</a>
                </div>
            </li>

        </ul>
        <div id="content-wrapper">

            @RenderBody()

            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Can Güler @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Çıkmaya Hazır Mısnız?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Çıkış yapmak istiyorsanız "Çıkış" butonuna basınız. </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                    <a class="btn btn-primary" href="@Url.Action("Index","Home")">Çıkış</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/PanelContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/PanelContent/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/PanelContent/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/Content/PanelContent/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/PanelContent/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/PanelContent/vendor/datatables/dataTables.bootstrap4.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/PanelContent/js/sb-admin.min.js"></script>
    <!-- Demo scripts for this page-->
    <script src="~/Content/PanelContent/js/demo/datatables-demo.js"></script>
    <script src="~/Content/PanelContent/js/demo/chart-area-demo.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>