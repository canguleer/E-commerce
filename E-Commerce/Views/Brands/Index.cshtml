@model IEnumerable<E_Commerce.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2 style="text-align:center;">Brands</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.brandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.code)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
            
                @Html.ActionLink("Edit", "Edit", new { id = item.brand_id }, new { @class = "btn btn-success" })

                @Html.ActionLink("Delete", "Delete", new { id = item.brand_id }, new { @class = "btn btn-danger" })
         
            </td>
        </tr>
        }

    </table>
</div>