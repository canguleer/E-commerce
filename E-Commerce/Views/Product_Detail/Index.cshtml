@model IEnumerable<E_Commerce.Models.Product_Detail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2 style="text-align:center;">Product Detail</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.properties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.propertiesDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.productName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.properties)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.propertiesDetail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.productName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.productDetail_id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.propertiesDetail }, new { @class = "btn btn-danger" })
            </tr>
        }

    </table>
</div>