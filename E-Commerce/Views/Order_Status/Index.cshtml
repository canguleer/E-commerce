@model IEnumerable<E_Commerce.Models.Order_Status>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2 style="text-align:center;">Orders Status</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.orderName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.orderName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.order_id }, new { @class = "btn btn-success" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.order_id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>